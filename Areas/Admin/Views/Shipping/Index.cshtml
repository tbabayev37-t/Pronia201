@model List<Shipping>
<div class="container">
    <div class="row">   
        <div class="row">
            <a class="btn btn-success col-2" asp-action="Create">Create</a>
        </div>
        
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">ImageUrl</th>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>

                    <th scope="col">Actions</th>
                  
                </tr>
            </thead>
            <tbody>
                @foreach (var shipping in Model)
                {
                    <tr>
                        <th scope="row">@shipping.Id</th>
                        <td>
                            <img src="~/assets/images/shipping/@shipping.ImageUrl"
                                 width="30" height="30" />
                        </td>
                        <td>@shipping.Title</td>
                        <td>@shipping.Description</td>

                        <td>
                            <a class="btn btn-warning">Update</a>
                            <a asp-action="Delete" asp-route-id="@shipping.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
</div>

</div>
